                    p
                    a(href="https://blog.ianturton.com/" target="_blank") Ian's random blog
                    p
                    a(href="https://justobjects.nl/" target="_blank") Just Objects
                    p
                    a(href="https://www.w3.org/community/maps4html/" target="_blank") Maps for HTML Community Group

        // Footer
        footer.footer.py-4.bg-light
            .container
                .row.align-items-center
                    .col-lg-4.text-lg-start
                        | Copyright &copy; 2022. Open Geospatial Consortium all rights reserved
                    .col-lg-4.my-3.my-lg-0
                        a.btn.btn-dark.btn-social.mx-2(href='https://noc.social/@doublebyte')
                            i.fa-brands.fa-mastodon
                        a.btn.btn-dark.btn-social.mx-2(href='mailto:devrel@ogc.org')
                            i.fa.fa-envelope
                    .col-lg-4.text-lg-end
